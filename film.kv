

###My Widgets


Root:
    directory_input:directory_input
    measurement_cont:measurement_cont
    measurement_type_input:measurement_type_input
    batch_name_input:batch_name_input
    
    
    
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:.13
            Label:
                text:'Directory:'
                size_hint_x:.2
            TextInput:
                text:''
                size_hint_x:.7
                id:directory_input
            Button:
                size_hint_x:.1
                text:'choose'
                on_press:root.show_load()
        BoxLayout:
            size_hint_y:.13
            orientation:'horizontal'
            Label:
                text:'Measurement type:'
            Spinner:
                text:'Measurement type'
                values: ['calibration','measurement','dosemap']
                id:measurement_type_input
            Label:
                text:'Batch name:'
            TextInput:
                text:''
                id:batch_name_input
        ScrollView
            size: self.size
            GridLayout:
                id:measurement_cont
                size_hint_y: None
                height: self.minimum_height
                cols: 1
                row_default_height: root.height/13
        BoxLayout:
            size_hint_y:.2
            orientation:'horizontal'
            Button:
                text:'Add row'
                on_release:root.add_row()
            Button:
                text:'Add column'
                on_release:root.add_column()
            Button:
                text:'Save changes'
                on_release:root.save_index()
            Button:
                text:'Run film_process'
                on_release:root.film_process()        

                

    

    
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            title:' '
            id: dirchooser
            path: '.'
            filters:[root.is_dir]
            dirselect: True
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(dirchooser.path, dirchooser.selection)
    
    
<mRow@BoxLayout>:
    BoxLayout:
        orientation:'horizontal'
        Label:
            size_hint_x:.06
            text:'No.'
        Label:
            size_hint_x:.12
            text:'Set name'
        Label:
            size_hint_x:.12
            text:'Set cal'
        Label:
            size_hint_x:.7
            text:'File names'
            
            
<cRow@BoxLayout>:
    BoxLayout:
        orientation:'horizontal'
        Label:
            size_hint_x:.06
            text:'No.'
        Label:
            size_hint_x:.12
            text:'Set name'
        Label:
            size_hint_x:.82
            text:'File names'

            

            
        
    
    